.card 
    display block
    margin-bottom 20px

    border-radius $radius
    box-shadow 0 0 4px 0 $shadow-dark
    padding 20px
    box-sizing border-box
    
    background-color #2c292d
    text-decoration none

    color $color-dark
    font-size 24px

    transition 0.3s
    overflow-x hidden
    @media screen and (max-width: 480px)
        font-size 18px